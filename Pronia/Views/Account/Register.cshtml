@using Pronia.ViewModels;
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

      <!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Username">User Name</label>
                                    <input asp-for="Username" placeholder="First Name" />
                                    <span asp-validation-for="Username"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Firstname">First Name</label>
                                    <input asp-for="Firstname" placeholder="First Name" />
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Last Name</label>
                                    <input asp-for="Surname" placeholder="Last Name" />
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Terms">Terms</label>
                                    <input asp-for="Terms" placeholder="Confirm Password" />
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}